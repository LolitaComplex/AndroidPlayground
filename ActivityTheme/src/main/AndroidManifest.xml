<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doing.theme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ThemeActivity" android:theme="@style/MaterialAnimations.Yellow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.HoloActivity"
            android:theme="@style/Holo" />
        <activity
            android:name=".ui.activity.HoloLightActivity"
            android:theme="@style/Holo.Light" />
        <activity
            android:name=".ui.activity.HoloActionBarDarkActivity"
            android:theme="@style/Holo.ActionBar" />
        <activity android:name=".ui.activity.MertialActivity"
            android:theme="@style/Mertial"/>

        <activity android:name=".ui.activity.MertialLightActivity"
            android:theme="@style/Mertial.Light"/>

        <activity android:name=".ui.activity.MertialActionBarActivity"
            android:theme="@style/Mertial.ActionBar"/>
    </application>

</manifest>