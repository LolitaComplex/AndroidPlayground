<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_loader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/LoaderActivity_btn_async"
        style="@style/ButtonStyle"
        android:text="AsyncTaskLoader"
        />

    <Button
        android:id="@+id/LoaderActivity_btn_cursor"
        style="@style/ButtonStyle"
        android:text="CursorLoader"
        />

    <Button
        android:id="@+id/LoaderActivity_btn_binding"
        style="@style/ButtonStyle"
        android:text="BindingLoader"
        />

</LinearLayout>
