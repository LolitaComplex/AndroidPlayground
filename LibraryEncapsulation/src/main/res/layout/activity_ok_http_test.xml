<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:id="@+id/activity_ok_http_test"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="2"
    tools:context="com.doing.architectureencapsulation.net.test.OkHttpTestActivity">

    <Button
        android:id="@+id/activity_btn_get"
        android:text="doGet"
        android:textAllCaps="false"
            />

    <Button
        android:id="@+id/activity_btn_post"
        android:text="doPost"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/activity_tv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="1"
        />
</GridLayout>
