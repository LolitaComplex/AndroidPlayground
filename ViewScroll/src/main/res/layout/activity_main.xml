<?xml version="1.0" encoding="utf-8"?>
<com.doing.viewscroll.ui.EventFragmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity_countainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doing.viewscroll.MainActivity">


    <com.doing.viewscroll.ui.ScrollView
        android:id="@+id/MainActivity_iv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#66CCFF"
        android:clickable="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="matrix"
        android:layout_gravity="left|top"
        />


    <com.doing.viewscroll.ui.ScrollView
        android:id="@+id/MainActivity_iv1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="250dp"
        android:background="#ff6666"
        android:clickable="true"
        android:src="@mipmap/ic_launcher"
        android:scaleType="matrix"
        android:layout_gravity="left|top"
        />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/btn_vdh"
        android:text="ViewDragHelper"
        android:layout_gravity="bottom"
        />
</com.doing.viewscroll.ui.EventFragmentLayout>
