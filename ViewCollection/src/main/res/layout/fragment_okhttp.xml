<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="3"
    >

    <TextView
        android:id="@+id/FragmentOkHttp_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:gravity="center"
        android:padding="5dp"
        android:text="OkHttp"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/FragmentOkHttp_btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Get"
        />

    <Button
        android:id="@+id/FragmentOkHttp_btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Post"
        />

    <Button
        android:id="@+id/FragmentOkHttp_btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="UpLoad"
        />

    <ScrollView
        android:id="@+id/FragmentOkHttp_sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_row="2"
        >

        <TextView
            android:id="@+id/FragmentOkHttp_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </ScrollView>


</GridLayout>