<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="5"
    >

    <TextView
        android:id="@+id/VolleyFragment_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_margin="5dp"
        android:layout_row="0"
        android:gravity="center"
        android:padding="5dp"
        android:text="Volley"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_string_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="String"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Post"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_json_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="Json"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_image_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Image"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_imageloader_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="ImageLoader"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/VolleyFragment_btn_network_imageview_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="NetWorkImage"
        android:textAllCaps="false"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_row="3"
        android:background="@android:color/holo_red_light"
        >

        <TextView
            android:id="@+id/VolleyFragment_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/VolleyFragment_iv_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_columnSpan="4"
        android:layout_row="4"
        />

</GridLayout>