<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_animate_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.doing.material.ui.AnimateViewActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/static_vector_start"
            android:layout_margin="10dp"
            />

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/static_vector_pause"
            android:layout_margin="10dp"
            android:id="@+id/view"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="25dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:foreground="@drawable/click_ripple"
            android:background="@drawable/vector_animator_start"
            />
    </LinearLayout>
</LinearLayout>
