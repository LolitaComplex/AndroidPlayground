<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:rowCount="6"
            android:columnCount="3"
            android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/FinityFrameActivity_toggle_play"
        android:textOn="停止"
        android:textOff="播放"
        />

    <Button
        android:id="@+id/FinityFrameActivity_btn_stop"
        android:text="[]"
        />

    <Button
        android:id="@+id/FinityFrameActivity_btn_frame"
        android:layout_row="1"
        android:layout_column="0"
        android:text="frame"
        android:textAllCaps="false"
        />

    <EditText
        android:id="@+id/FinityFrameActivity_ed_frame"
        android:text="25"
        android:layout_width="70dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/FinityFrameActivity_btn_previous"
        android:layout_row="2"
        android:layout_column="0"
        android:text="《《《"
        />

    <Button
        android:id="@+id/FinityFrameActivity_btn_next"
        android:text="》》》"
        />

    <ToggleButton
        android:id="@+id/FinityFrameActivity_toggle_loop"
        android:textOff="LOOP"
        android:textOn="UNLOOP"
        />

    <ToggleButton
        android:id="@+id/FinityFrameActivity_toggle_visible"
        android:textOff="VISIBLE"
        android:textOn="INVISIBLE"
        />

    <View
        android:id="@+id/FinityFrameActivity_visible"
        android:layout_width="match_parent"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_height="30dp"
        android:visibility="gone"
        android:background="#66ccff"
        />

    <SurfaceView
        android:id="@+id/FinityFrameActivity_surface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="3"
        />
</GridLayout>